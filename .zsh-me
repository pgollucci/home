p6df::user::theme() {

    export AWS_PAGER=
    export GH_PAGER=
    export PAGER=less
    export EDITOR=emacs # zsh will set key bindings based on this
    export LESS=-R
    export RUBY_SHELL=ripe
    export DIFF_OPTIONS=-u
    export MYSQL_PS1="\v \u@\h:\p (\d)>"
}

