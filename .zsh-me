p6df::user::prompt::my_langs() {

    local node=$(p6df::modules::node::prompt::line)
    local python=$(p6df::modules::python::prompt::line)
    local ruby=$(p6df::modules::ruby::prompt::line)
    local perl=$(p6df::modules::perl::prompt::line)
    local go=$(p6df::modules::go::prompt::line)
#    lua::prompt::line
#    R::prompt::line
#    java::prompt::line

    p6_echo "langs:\t  $node $python $ruby $perl $go"
}

p6df::user::prompt() {

  PromptLines=(
    p6df::modules::zsh::prompt::std

    p6df::user::prompt::my_langs

    p6df::modules::helm::prompt::line
    p6df::modules::kubernetes::prompt::line
    p6df::modules::docker::prompt::line
