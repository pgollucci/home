#!/bin/sh

#### Options
Help=0

while getopts h o; do
  case "$o" in
    h) echo "hinit [-h]"; exit 0;;
  esac
done

for m in $HOME $HOME/.dotfiles $HOME/.oh-my-zsh $HOME/.rbenv $HOME/.rbenv/plugins/ruby-build; do
  if [ -d $m ]; then
    cd $m
    git pull origin
   fi
done

if [ -d $HOME/.private ]; then
  cd $HOME/.private
  git pull origin
fi

echo "Done"
